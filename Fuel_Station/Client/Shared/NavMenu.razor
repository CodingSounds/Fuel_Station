<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Fuel_Station</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Login
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="counter">
                <span class="oi oi-plus" aria-hidden="true"></span> Counter
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="fetchdata">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Fetch data
            </NavLink>
        </div>
         <div class="nav-item px-3">
            <NavLink class="nav-link" href=@($"/Customer/{User}")>
                <span class="oi oi-list-rich" aria-hidden="true"></span> Customers
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Item{User:guid?}">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Items
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Employee{User}">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Employees
            </NavLink>
        </div>
         <div class="nav-item px-3">
            <NavLink class="nav-link" href="MonthlyLedger">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Monthly Ledger
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="index">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Login
            </NavLink>
        </div>
    </nav>
</div>

@code {

    [Parameter] public Guid? User { get; set; }
    private bool collapseNavMenu = true;

  
    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
